{
  "name": "create-vite-powerflow-app",
  "version": "1.0.4",
  "description": "CLI tool to create a new Vite PowerFlow app",
  "type": "module",
  "bin": {
    "create-vite-powerflow": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist/templates && cp src/templates/*.md dist/templates/",
    "dev": "tsc -w",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "format": "prettier --write ."
  },
  "keywords": [
    "cli",
    "powerflow",
    "react",
    "vite",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.14.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "inquirer": "^9.2.16",
    "ora": "^8.0.1",
    "simple-git": "^3.22.0"
  }
}
